<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- Dao実装 -->
	<!-- ======================================================================================== -->
	<!-- docFileAccessor -->
	<bean id="docFileAccessor" class="jp.co.ctc_g.eim.app.document.integration.impl.DocumentFileAccessorImpl" >
		<property name="bufferdSize">
			<value>4096</value>
		</property>
		<property name="flushSize">
			<value>0</value>
		</property>
		<property name="zipEncoding">
			<value>MS932</value>
		</property>
	</bean>
	
	<!-- webdavObjectDao2 -->
	<bean id="webdavObjectDao2" class="jp.co.ctc_g.eim.framework2.integration.dao.impl.ObjectDaoImpl" >				
		<!-- null（全て取得する） -->
		<property name="attributeTypeListForSingleTargetMethod">
			<null/>
		</property>
		<!-- null（全て取得する） -->
		<property name="attributeTypeListForMultiTargetMethod">
			<null/>
		</property>
		<property name="itemListForSingleTargetMethod">
			<null/>
		</property>
		<property name="itemListForMultiTargetMethod">
			<null/>
		</property>
		<property name="limit">
			<value>1000</value>
		</property>
		<property name="bulkCount">
			<value>200</value>
		</property>
		<property name="limitCondition">
			<value>false</value>
		</property>
		<property name="statusDao">
			<ref bean="statusDaoLight2"/>
		</property>
		<property name="workflowDao">
			<ref bean="workflowDao2"/>
		</property>
		<property name="objectTypeDao">
			<ref bean="objectTypeDao2"/>
		</property>
		<property name="attributeLoadingQueryTypeEnum">
			<value>AUTO</value>
		</property>
		<!-- オブジェクト複数取得メソッドでステータスリストを取得するかしないかを指定 -->
		<property name="isTakeStatusListForMultiTarget">
			<value>false</value>
		</property>
		<!-- オブジェクト単数取得メソッドでステータスリストを取得するかしないかを指定 -->
		<property name="isTakeStatusListForSingleTarget">
			<value>false</value>
		</property>
		<!--
			getList(SearchSelectObject, SearchLimitCountCondition)において、
				取得項目および属性項目の絞り込みの挙動を切り替えるフラグ
			・true:引数⇒applicationContextのプロパティ⇒実装の順で参照します。
			・false:引数⇒実装の順で参照します。
			
			本設定ファイルでは、trueとします。
			コメントアウトした場合はfalseと同じ挙動となります。
		-->
		<property name="enabledListForGetListSelectTarget">
			<value>true</value>
		</property>
		<property name="isLoadProperty">
			<value>false</value>
		</property>
		<property name="enabledObjectAttributeCirculationCheck" value="false" /> <!-- オブジェクト型の属性は循環参照チェックしない -->			
		<!-- 更新時に更新日時/更新者を更新するか -->
		<property name="updatedModificationInfo" value="false" />
	</bean>
	
</beans>