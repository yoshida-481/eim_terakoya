<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
		xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans.xsd
			http://www.springframework.org/schema/aop
			http://www.springframework.org/schema/aop/spring-aop.xsd">

	<!-- サムネイル・プレビューファイル変換アドバイス -->
	<bean id="convertDocumentServiceAdvice" class="jp.co.ctc_g.eim.app.document.common.aop.advice.ConvertDocumentServiceAdvice" >
		<property name="convertDocumentService" ref="convertDocumentService"/>
		<property name="objectService" ref="objectService2WithTypeAndMUser"/>
		<property name="formatService" ref="formatServiceLight2"/>
	</bean>

	<!-- AOP設定 -->
	<aop:config>

		<aop:aspect order="10" ref="convertDocumentServiceAdvice">
			<aop:after-returning
				method="afterCreateAdvice"
				pointcut=" execution(* jp.co.ctc_g.eim.framework2.integration.dao.impl.FileDaoImpl.create(..)) and args(arg0,arg1,..)"
				arg-names="arg0,arg1"
			/>
		</aop:aspect>
		<aop:aspect order="20" ref="convertDocumentServiceAdvice">
			<aop:after-returning
				method="afterUpdateAdvice"
				pointcut="execution(* jp.co.ctc_g.eim.framework2.integration.dao.impl.FileDaoImpl.update(..)) and args(arg0,arg1,..)"
				arg-names="arg0,arg1"
			/>
		</aop:aspect>

	</aop:config>
</beans>

