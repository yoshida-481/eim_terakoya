<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- 標準出力 -->
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<!-- 出力先-->
		<param name="Target" value="System.out" />
		<!-- [INFO]以上のログ(DEBUG)は出力しない -->
		<param name="threshold" value="INFO"/>
		<!-- レイアウト -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss}	%C#%M:%L	%n%p:	%m%n"/>
		</layout>
	</appender>

	<!-- 通常ログファイル出力 -->
	<appender name="DefaultLog" class="org.apache.log4j.RollingFileAppender">
		<!-- 出力先-->
		<param name="File" value="eim_maintenance.log"/>
		<!-- 最大ファイルサイズ -->
		<param name="MaxFileSize" value="10000000"/>
		<!-- 保管ログの最大数 -->
		<param name="MaxBackupIndex" value="5"/>
		<!-- 追加書き込み (true:追加 | false:上書き) -->
		<param name="Append" value="true"/>
		<!-- [INFO]以上のログ(DEBUG)は出力しない -->
		<param name="threshold" value="INFO"/>
		<!-- レイアウト -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss}	%p	%C#%M:%L	%m%n"/>
		</layout>
	</appender>
	
	<!-- デバッグログファイル出力 -->
	<appender name="DebugLog" class="org.apache.log4j.RollingFileAppender">
		<!-- 出力先-->
		<param name="File" value="eim_maintenance_debug.log"/>
		<!-- 最大ファイルサイズ -->
		<param name="MaxFileSize" value="10000000"/>
		<!-- 保管ログの最大数 -->
		<param name="MaxBackupIndex" value="5"/>
		<!-- 追加書き込み (true:追加 | false:上書き) -->
		<param name="Append" value="true"/>
		<!-- 全てのログを出力 -->
		<param name="threshold" value="DEBUG"/>
		<!-- レイアウト -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss}	%p	%C#%M:%L	%m%n"/>
		</layout>
	</appender>
	
	<appender name="Null" class="org.apache.log4j.varia.NullAppender"/>

	<root>
		<!-- 標準出力と通常ログファイルを行う -->
		<appender-ref ref="stdout" />
		<appender-ref ref="DefaultLog" />
	</root>

</log4j:configuration>