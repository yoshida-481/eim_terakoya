	<!-- アプリ側 Pointcut定義 -->
	<aop:config>
			<aop:pointcut id="serviceDocumentOperation"
				expression="execution(* jp.co.ctc_g.eim.app.document.business.service.*.*(..))
				or execution(* jp.co.ctc_g.eim.search.core.searchApi.presentation.controller.FileDownloadController.get*(..))" />
			<aop:advisor advice-ref="txAdvice" order="1"
				pointcut-ref="serviceDocumentOperation" />
	</aop:config>

