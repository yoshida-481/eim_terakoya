	<!-- Spring Transaction Manager JTA対応 -->
	<bean id="transactionManager" class="org.springframework.transaction.jta.JtaTransactionManager" depends-on="userTransactionInithalizeer">
		 <property name="allowCustomIsolationLevels" value="true" />
	</bean>

	<!-- UserTransactionの初期化 (バッチ処理において有効に機能します。Tomcat/WebLogic実行時は無視されます。) -->
	<bean id="userTransactionInithalizeer" class="jp.co.ctc_g.eim.framework2.integration.dao.util.DBUtils" init-method="initUserTransaction">
	</bean>

</beans>