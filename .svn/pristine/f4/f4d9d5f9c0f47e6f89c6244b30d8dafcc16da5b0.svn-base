<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- ======================================= -->
	<!-- 分散トランザクション (JTA対応) Oracle用 -->
	<!-- ======================================= -->

	<!-- DataSource バッチ用 -->
	<bean id="dataSource" class="jp.co.ctc_g.eim.framework2.integration.atomikos.AtomikosDataSourceBeanWrapper" destroy-method="close">
		<property name="uniqueResourceName" value="eimdbXa" />
		<property name="minPoolSize" value="4" />
		<property name="maxPoolSize" value="128" />
		<property name="xaDataSource">
			<bean class="oracle.jdbc.xa.client.OracleXADataSource">
				<property name="uRL" value="jdbc:oracle:thin:@${DB_HOST}:${DB_PORT}${DB_DELIMITER}${DB_ID}" />
				<property name="user" value="${DB_USER}" />
				<property name="password" value="${DB_PASS}" />
			</bean>
		</property>
	</bean>

