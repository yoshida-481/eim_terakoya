<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Service実装 -->
	<!-- ======================================================================================== -->	
	<!-- ファイルIOサービス -->
	<!-- 　objectTypeName -->
	<!-- 　　　ファイルアップロード時のオブジェクト名。リクエストで指定しない場合は省略不可。 -->
	<!-- 　formatName -->
	<!-- 　　　ファイルIO時の保存先フォーマット名。省略可。省略した場合はデフォルトフォーマットが適用される。 -->
	<!--   relationTypeName -->
	<!--       ファイルアップデートにて改名(ObjectUtils.rename)する際のチェック対象のリレーション名。省略可。 -->
	<!-- 　createCheckCode -->
	<!-- 　　　ファイルアップロード時のチェック項目番号。省略不可。詳細はObjectUtils.createObject参照。 -->
	<!-- 　updateCheckCode -->
	<!-- 　　　ファイルアップデート時のチェック項目番号。省略不可。詳細はObjectUtils.rename参照。 -->
	<!--   fileReceiver -->
	<!--       受信ファイル保存インスタンス。省略不可。別のbeanタグにて設定。 -->
	<bean id="fileIoService" 
         class="jp.co.ctc_g.eim.framework.business.service.impl.FileIoServiceImpl" >                        
		<property name="objectTypeName">
			<null/>
        </property>
        <property name="formatName">
        	<null/>
        </property>
        <property name="relationTypeName">
        	<null/>
        </property> 
        <property name="createCheckCode">
        	<value>0</value>
        </property> 
        <property name="updateCheckCode">
        	<value>0</value>
        </property>                                                                 
        <property name="fileReceiver">
        	<ref bean="fileReceiver" />
        </property>                            
	</bean> 

	<!-- 受信ファイル保存処理クラス -->
	<!-- 　以下、コンストラクタ変数 -->
	<!-- 　　　InputStream　受信ファイルの入力ストリーム。通常はファイル情報から取得するため指定不要。 -->
	<bean id="fileReceiver" 
		class="jp.co.ctc_g.eim.framework.common.component.impl.FileReceiverImpl" >
		<constructor-arg index="0">
			<null/>
		</constructor-arg>
	</bean>
	
	<!-- ファイル送信処理クラス -->
	<!-- 　以下、コンストラクタ変数 -->
	<!-- 　　　OutputStream　送信ファイルの出力ストリーム。通常はresponseから取得するため指定不要。 -->
	<bean id="fileTransmitter" 
        class="jp.co.ctc_g.eim.framework.common.component.impl.FileTransmitterImpl" >
		<constructor-arg index="0">
			<null/>
		</constructor-arg>
	</bean>     
	
 </beans>