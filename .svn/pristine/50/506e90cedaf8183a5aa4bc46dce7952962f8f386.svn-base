<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=
		"http://www.springframework.org/schema/beans
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.springframework.org/schema/context
		 http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- =================================================================================== -->
	<!-- LDAP同期バッチ用のApplicationContextファイル                                        -->
	<!--     コンソールモードを使ってDBアクセスを行います                                    -->
	<!--     RollBackExceptionの発生を防ぐためにTransactionmanagerを読み込まないようにします -->
	<!-- =================================================================================== -->

	<!-- アノテーションを有効にする -->
	<context:annotation-config/>

	<!-- ApplicationContextを保持するApplicationContextAware -->
	<bean id="applicationContextLoader" class="jp.co.ctc_g.eim.framework2.common.context.ApplicationContextLoader"/>

	<!-- 各種プロパティ値の取得元となるプロパティファイルのロケーション -->
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:config.properties</value>
			</list>
		</property>
	</bean>

	<!-- ======================================= -->
	<!-- 読み込むApplicationContextファイル      -->
	<!-- ======================================= -->

	<!-- EIMANAGER FW2用 コンテキストファイル -->
	<import resource="applicationContext-fw2-aop.xml" />
	<import resource="applicationContext-fw2-business.xml" />
	<import resource="applicationContext-fw2-integration.xml" />
	<!-- <import resource="applicationContext-fw2-security.xml" /> -->

	<!-- EIMANAGER FW1用コンテキストファイル -->
	<import resource="applicationContext-fw-fileIo.xml" />
	<import resource="applicationContext-fw-mail.xml" />
	<import resource="applicationContext-fw-userDefGroup.xml" />
	<import resource="applicationContext-fw2-integration-for-fw.xml" />

	<!-- EIMANAGER UTIL用コンテキストファイル -->
	<import resource="applicationContext-eim-util.xml" />
	<import resource="applicationContext-fw2-integration-for-util.xml" />

	<!-- EIMANAGER FW 提供 トランザクション管理用コンテキストファイル ※いずれか一つを有効にして下さい。 -->
	<!-- <import resource="applicationContext-tx-batch.xml" /> バッチ用 通常トランザクション (JTA非対応) Oracle用 -->
	<!-- <import resource="applicationContext-tx-batch-jta.xml" /> バッチ用 分散トランザクション (JTA対応) Oracle用 -->
	<!-- <import resource="applicationContext-tx-batch-pg.xml" /> バッチ用 通常トランザクション (JTA非対応) PostgreSQL用 -->
	<!-- <import resource="applicationContext-tx-batch-jta-pg.xml" /> バッチ用 分散トランザクション (JTA対応) PostgreSQL用 -->

	<!-- EIMANAGER FW APIキャッシュ用コンテキストファイル -->
	<import resource="applicationContext-fw2-business-cache.xml" />
	<import resource="applicationContext-fw2-integration-cache.xml" />
	<import resource="applicationContext-fw2-integration-util.xml" />
	<import resource="applicationContext-fw2-integration-for-cacheService.xml" />

	<!-- LDAP同期バッチメインクラス -->
	<bean class="jp.co.ctc_g.eim.framework2.presentation.batch.SyncLdap">
		<property name="syncLdapService" ref="syncLdapService2" />
	</bean>

</beans>
