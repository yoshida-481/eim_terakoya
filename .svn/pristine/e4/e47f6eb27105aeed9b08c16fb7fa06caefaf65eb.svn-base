package tool.file;

/**
 * ファイル一覧作成プログラム用定義クラス
 *
 */
public interface Constants {

	/**
	 * エラーメッセージ：引数で指定されたパスが存在しない
	 */
	public static final String ERR_PATH_NOT_FOUND = "Path specified by the argument doesn't exist.";

	/**
	 * エラーメッセージ：引数で指定されたパスが読み込めない
	 */
	public static final String ERR_PATH_CANNOT_READ = "Path specified by the argument cannot be read.";

	/**
	 * エラーメッセージ：引数で指定されたパス以下に読み込めないディレクトリがある
	 */
	public static final String ERR_CANNOT_READ_DIR_EXIST = "The directory that cannot be read exists.";

	/**
	 * エラーメッセージ：引数で指定されたパス以下に読み込めないファイルがある
	 */
	public static final String ERR_CANNOT_READ_FILE_EXIST = "The file that cannot be read exists.";

	/**
	 * エラーメッセージ：引数で指定されたが出力ファイルが存在する
	 */
	public static final String ERR_OUT_PUT_FILE_EXIST = "The output file specified by the argument already exists.";

	/**
	 * エラーメッセージ：引数で指定されたが出力ファイルに書き込めない
	 */
	public static final String ERR_CANNOT_WRITE_FILE = "It is not possible to write in the output file specified by the argument.";
	
	/**
	 * エラーメッセージ：引数が正しく指定されていない
	 */
	public static final String ERR_INVALID_ARGS = "The argument is not correctly specified.";	
}
