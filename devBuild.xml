<?xml version="1.0" encoding="UTF-8"?>
<project name="devflex" basedir=".">	
	<property file="build.properties"/>
	<property name="flexsrcdir" value="C:/mproject/workspace/eim40/flex" /><!-- source path -->
	<property name="FCSHWRAPP_HOME" value="${flexsrcdir}/fcshWrapper-bin"/> <!-- FCSH Wrapper のパス -->
	<property name="out.dir" value="release_work/webapp" />
	<path id="mypath">
       <fileset dir="${FCSHWRAPP_HOME}" includes="fcshWrapper.jar"/>
   	</path>  
   <taskdef name="fcsh" classname="ro.arhinet.fcshwrapper.ant.FcshTask">
       <classpath refid="mypath"/>
   </taskdef>
  <target name="appDocTop">
     <fcsh command="mxmlc">
			<arg value="-library-path+=${flexsrcdir}/lib/cadenza.swc"/>
     		<arg value="-o ${out.dir}/app/document/topView.swf"/>
     		<arg value="${flexsrcdir}/app/document/topView.mxml"/>
     		<arg value="-locale "/>
     		<arg value="-sp ${flexsrcdir}"/>
     		<arg value="-debug=true"/>
     </fcsh>
  </target>
  <target name="appAdminTop">
     <fcsh command="mxmlc">
			<arg value="-library-path+=${flexsrcdir}/lib/cadenza.swc"/>
     		<arg value="-o ${out.dir}/admin/topView.swf"/>
     		<arg value="${flexsrcdir}/admin/topView.mxml"/>
     		<arg value="-locale "/>
     		<arg value="-sp ${flexsrcdir}"/>
     		<arg value="-debug=true"/>
     </fcsh>
  </target>
</project>  